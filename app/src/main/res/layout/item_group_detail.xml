<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:layout_marginLeft="25dp"
        android:id="@+id/item_icon"
        android:layout_gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:maxLines="1"
        android:layout_toRightOf="@id/item_icon"
        android:layout_centerVertical="true"
        android:text="lamp bulp"
        android:textColor="#081837"
        android:textSize="20sp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/center"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_height="1dp"/>
    <ImageView
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/center"
        android:id="@+id/icon_one"
        android:src="@drawable/addition_icon_alarm"
        android:layout_width="22dp"
        android:layout_height="22dp"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon_one"
        android:id="@+id/icon_two"
        android:src="@drawable/addition_icon_morning"
        android:layout_width="22dp"
        android:layout_height="22dp"/>
    <CheckBox
        android:padding="10dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/cb_check"
        android:button="@drawable/checkbox_lamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/icon_wifi"
        android:src="@drawable/wifi_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/icon_small_wifi"
            android:src="@drawable/cloud_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/icon_small_cloud"
            android:src="@drawable/wifi_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>

</RelativeLayout>